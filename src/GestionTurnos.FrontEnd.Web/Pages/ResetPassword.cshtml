@page
@model GestionTurnos.FrontEnd.Web.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reestablecer contraseña";
}
<h2 class="mb-4">Reestablecer contraseña</h2>
@if (Model.TokenInvalido)
{
    <div class="alert alert-danger">El enlace de recuperación es inválido o ha expirado.</div>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <div class="mb-3">
            <label for="NuevaPassword" class="form-label">Nueva contraseña</label>
            <input type="password" class="form-control" id="NuevaPassword" name="NuevaPassword" required />
        </div>
        <div class="mb-3">
            <label for="ConfirmarPassword" class="form-label">Confirmar nueva contraseña</label>
            <input type="password" class="form-control" id="ConfirmarPassword" name="ConfirmarPassword" required />
        </div>
        <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
    </form>
    @if (!string.IsNullOrEmpty(Model.Mensaje))
    {
        <div class="alert alert-info mt-3">@Model.Mensaje</div>
    }
}
