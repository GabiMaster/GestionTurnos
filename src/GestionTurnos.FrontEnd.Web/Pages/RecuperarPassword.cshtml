@page
@model RecuperarPasswordModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 p-4">
            <h2 class="mb-4 text-center">Recuperar contraseña</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary btn-lg">Enviar enlace de recuperación</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <div class="alert alert-info text-center mt-3">@Model.Mensaje</div>
            }
        </div>
    </div>
</div>
